<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PruebaPatrickLisby</title>
    <script type="module" src="/js/login.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800 flex flex-col min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow-md">
        <nav class="container mx-auto flex items-center justify-between py-4 px-6">
            <!-- Logo -->
            <a href="/Home" class="text-xl font-bold text-blue-600">Inicio</a>

            <!-- Botón de cerrar sesión -->
            <div class="flex">
                <a href="#" id="logoutLink" class="hover:text-blue-600">Cerrar sesión</a>
            </div>
        </nav>
    </header>


    <!-- Main Content -->
    <main class="container mx-auto px-6 py-8 flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t">
        <div class="container mx-auto py-4 px-6 text-center text-gray-600">
            &copy; 2024 - PruebaPatrickLisby - <a href="/Home/Privacy" class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    <script>
        // Toggle mobile menu
        document.getElementById("menu-button").addEventListener("click", () => {
            const mobileMenu = document.getElementById("mobile-menu");
            mobileMenu.classList.toggle("hidden");
        });
    </script>

    <script type="module">
        import { logout } from "/js/login.js";

        document.getElementById("logoutLink").addEventListener("click", (e) => {
            e.preventDefault();
            logout();
        });
    </script>

    <!-- Renderizar la sección Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
