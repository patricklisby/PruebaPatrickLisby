@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro - PruebaPatrickLisby</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-green-200 via-blue-200 to-purple-200 min-h-screen flex flex-col">
    <!-- Contenedor de notificaciones -->
    <div id="notificationContainer" class="fixed top-4 right-4 space-y-4 z-50"></div>

    <!-- Contenido principal -->
    <div class="flex-grow flex items-center justify-center">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col md:flex-row max-w-4xl w-full">
            <!-- Imagen en el lado izquierdo -->
            <div class="hidden md:block md:w-1/2 bg-gray-300 flex items-center justify-center">
                <img src="/logoApp.webp" alt="Logo" class="object-contain w-full h-full p-4">
            </div>
            <!-- Formulario de registro en el lado derecho -->
            <div class="w-full md:w-1/2 p-8">
                <a href="/Login/LoginForm" class="text-blue-600 hover:underline block text-center mb-4">¿Ya tienes cuenta? Inicia sesión</a>
                <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Registrar Usuario</h2>
                <form id="registroForm" class="space-y-4">
                    <div>
                        <label for="idCedulaUsuario" class="block text-sm font-medium text-gray-700">Cédula</label>
                        <input type="number" id="idCedulaUsuario" name="idCedulaUsuario" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                    </div>
                    <div>
                        <label for="nombreUsuario" class="block text-sm font-medium text-gray-700">Nombre</label>
                        <input type="text" id="nombreUsuario" name="nombreUsuario" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                    </div>
                    <div>
                        <label for="apellidoUsuario" class="block text-sm font-medium text-gray-700">Apellido</label>
                        <input type="text" id="apellidoUsuario" name="apellidoUsuario" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                    </div>
                    <div>
                        <label for="correoElectronicoUsuario" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
                        <input type="email" id="correoElectronicoUsuario" name="correoElectronicoUsuario" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                    </div>
                    <div>
                        <label for="contrasenaUsuario" class="block text-sm font-medium text-gray-700">Contraseña</label>
                        <input type="password" id="contrasenaUsuario" name="contrasenaUsuario" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" required>
                    </div>
                    <div>
                        <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">Registrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer siempre abajo -->
    <footer class="bg-white border-t py-4 text-center text-gray-600">
        &copy; 2024 - PruebaPatrickLisby - <a href="/Home/Privacy" class="text-blue-600 hover:underline">Privacy</a>
    </footer>

    <script src="/js/register.js"></script>
</body>

</html>
